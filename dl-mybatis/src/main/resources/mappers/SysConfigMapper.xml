			#{item.sysKey,jdbcType=VARCHAR},  
			#{item.sysValue,jdbcType=VARCHAR},  
			#{item.sysGroup,jdbcType=VARCHAR},  
			#{item.status,jdbcType=VARCHAR},  
			#{item.remark,jdbcType=VARCHAR},  
